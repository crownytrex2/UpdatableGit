--// Speed GUI - By crownytrex

-- Variables
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local KEY = "WENEEDSPEED"

-- Create GUI
local gui = Instance.new("ScreenGui", game:GetService("CoreGui"))
gui.Name = "SpeedGUI"
gui.ResetOnSpawn = false

-- Main Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 320, 0, 180)
frame.Position = UDim2.new(0.5, -160, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.3
frame.Active = true
frame.Draggable = true

local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 10)

-- Label
local label = Instance.new("TextLabel", frame)
label.Text = "crownytrex's speed"
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.BackgroundTransparency = 1
label.Size = UDim2.new(1, 0, 0, 40)
label.Position = UDim2.new(0, 0, 0, 0)
label.TextScaled = true

-- Key TextBox
local keyBox = Instance.new("TextBox", frame)
keyBox.PlaceholderText = "Enter Key"
keyBox.Text = ""
keyBox.Size = UDim2.new(0.8, 0, 0, 30)
keyBox.Position = UDim2.new(0.1, 0, 0, 50)
keyBox.Font = Enum.Font.Gotham
keyBox.TextColor3 = Color3.fromRGB(255, 255, 255)
keyBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local keyCorner = Instance.new("UICorner", keyBox)
keyCorner.CornerRadius = UDim.new(0, 6)

-- Speed TextBox
local speedBox = Instance.new("TextBox", frame)
speedBox.PlaceholderText = "Enter Speed"
speedBox.Text = ""
speedBox.Size = UDim2.new(0.6, 0, 0, 30)
speedBox.Position = UDim2.new(0.1, 0, 0, 100)
speedBox.Font = Enum.Font.Gotham
speedBox.TextColor3 = Color3.fromRGB(255, 255, 255)
speedBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local speedCorner = Instance.new("UICorner", speedBox)
speedCorner.CornerRadius = UDim.new(0, 6)

-- Toggle Button
local button = Instance.new("TextButton", frame)
button.Text = "Toggle"
button.Size = UDim2.new(0.25, 0, 0, 30)
button.Position = UDim2.new(0.75, 10, 0, 100)
button.Font = Enum.Font.GothamBold
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.BackgroundColor3 = Color3.fromRGB(70, 130, 180)

local buttonCorner = Instance.new("UICorner", button)
buttonCorner.CornerRadius = UDim.new(0, 6)

-- Functionality
local speedEnabled = false

button.MouseButton1Click:Connect(function()
	if keyBox.Text == KEY then
		local speed = tonumber(speedBox.Text)
		if speed then
			speedEnabled = not speedEnabled
			if speedEnabled then
				hum.WalkSpeed = speed
				button.Text = "ON"
				button.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
			else
				hum.WalkSpeed = 16
				button.Text = "OFF"
				button.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
			end
		else
			speedBox.Text = "Invalid Number"
		end
	else
		keyBox.Text = "Invalid Key"
	end
end)
